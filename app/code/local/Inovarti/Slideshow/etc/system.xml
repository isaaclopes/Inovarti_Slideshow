<config>
    <tabs>
        <inovarti translate="label" module="slideshow">
            <label>Inovarti</label>
            <sort_order>299</sort_order>
        </inovarti>
    </tabs>
    <sections>
        <slideshow translate="label" module="slideshow">
            <label>Slideshow</label>
            <tab>mundopet</tab>
            <sort_order>140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>Slideshow Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Enable/Disable slideshow</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </enabled>
                        <height>
                            <label>Fixed height: </label>
                            <frontend_type>text</frontend_type>
                            <comment>Enter height in px. Leave empty to have slideshow height adjusted to largest slide</comment>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </height>
                        <animation>
                            <label>Animation: </label>
                            <frontend_type>select</frontend_type>
                            <comment>Select your animation type</comment>
                            <source_model>slideshow/config_effect</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </animation>
                        <slideshow>
                            <label>Slideshow: </label>
                            <frontend_type>select</frontend_type>
                            <comment>Animate slider automatically</comment>
                            <source_model>slideshow/config_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </slideshow>
                        <smoothheight>
                            <label>Smooth Height change: </label>
                            <frontend_type>select</frontend_type>
                            <comment>Change slider height according to slide</comment>
                            <source_model>slideshow/config_yesno</source_model>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </smoothheight>
                        <animation_loop>
                            <label>Animation loop: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <comment>Should the animation loop?</comment>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </animation_loop>
                        <mousewheel>
                            <label>Mousewheel: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <comment>Allows slider navigating via mousewheel</comment>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </mousewheel>
                        <slideshow_speed>
                            <label>Slideshow speed: </label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </slideshow_speed>
                        <animation_speed>
                            <label>Animation speed: </label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the speed of animations, in milliseconds</comment>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </animation_speed>
                        <control_nav>
                            <label>Show navigation: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <comment>Show navigation for paging control of each slide?</comment>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </control_nav>
                        <direction_nav>
                            <label>Show  previous/next navigation: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </direction_nav>
                        <timeline>
                            <label>Show timeline: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </timeline>
                    </fields>
                </config>
            </groups>
        </slideshow>
    </sections>
</config>


