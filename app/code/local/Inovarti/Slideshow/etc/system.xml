<config>
    <sections>
        <slideshow translate="label" module="slideshow">
            <label>Slideshow</label>
            <tab>inovarti</tab>
            <sort_order>140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>Slideshow Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Enable/Disable slideshow</comment>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </enabled>
                        <height>
                            <label>Fixed height</label>
                            <frontend_type>text</frontend_type>
                            <comment>Enter height in px. Leave empty to have slideshow height adjusted to largest slide</comment>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </height>
                        <wrap>
                            <label>Pause</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <comment>Whether the carousel should cycle continuously or have hard stops</comment>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </wrap>
                        <interval>
                            <label>Slideshow speed</label>
                            <frontend_type>text</frontend_type>
                            <comment>Set the speed of the slideshow cycling, in milliseconds</comment>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </interval>
                        <control_nav>
                            <label>Show navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <comment>Show navigation for paging control of each slide?</comment>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </control_nav>
                        <direction_nav>
                            <label>Show previous/next navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slideshow/config_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </direction_nav>
                    </fields>
                </config>
            </groups>
        </slideshow>
    </sections>
</config>


